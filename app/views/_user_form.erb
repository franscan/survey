<form action="<%= url %>" method="POST">
  <label for="email">E-mail</label>
  <input id="email" type="email" name=user[email] value="" required><br>
  <label for="password">Password</label>
  <input id="password" type="password" name=user[password] value="" required><br>
  <input type="submit" value="Submit">
</form>
<% if errors != [] %>
  <% errors.each do |error| %>
    <div id="error">
      <p><%= error %></p>
    </div>
    <div id="errorgorilla">
      <a href="http://imgur.com/riPc9FN"><img src="http://i.imgur.com/riPc9FN.png" title="Hosted by imgur.com" /></a>
    </div>
  <% end %>
<% end %>
